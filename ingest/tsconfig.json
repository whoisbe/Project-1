{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": [],
		"paths": {
			"@repo/config": ["../packages/config/src/index.ts"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}

